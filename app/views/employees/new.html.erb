<%= render :partial => "layouts/masthead" ,:locals => {
	:title => "Employee",
	:description => "Add info to employee database"
}%>

<div id="content">

	<div class="container">
		
		
		<div class="row">
			
			<div class="span8">
				 
				<%= link_to new_employee_url, :class => "new_entry btn btn-primary" do %>
					<i class="icon-plus"></i>Karyawan Baru
				<% end %> 
				<hr />
				<%#= render :partial => "employees/new_object_form", :locals => {
					:new_object => @new_object , 
					:url => employees_url 
				}%>
 
				<table class="table table-bordered table-striped table-highlight" id='tableview'>
					<thead>
						<tr>
							<th>ID</th>
							<th>Name</th>
							<th>Contact</th> 
							<th>Address</th>
							<th>Total Service</th>
							<th colspan='2'>Action</th>
						</tr>
					</thead>
					<tbody> 
						<% @objects.each do |object| %>
							<%= render :partial =>  'employees/entry', :locals => {
								:object => object 
							} %> 
						<% end %>
					</tbody>
				</table>
			 
				
			</div> <!-- /.span8 -->
			
			
			<div class="span4">
				
						
				Total Karyawan: <%= Employee.active_employees.count %> <hr /> 
						
				
			</div> <!-- /.span4 -->
			
		</div> <!-- /.row -->
		
	
	</div> <!-- /.container -->

</div> <!-- /#content -->

