

<% if new_object.persisted? %>
	<% id = 'edit_object'%>
<% else %>
	<% id = 'new_object'%>
<% end %>

 
<%= simple_form_for( new_object, :url => url,
      :method => :post , 
      :html => {:class => "prevent_double_submit ajax-form   no_content_form",
        :id => "#{id}"}) do |f| %>

	<%#= f.input :parent_id , :label => "Super Category" %>
	
	<%= f.input :item_id  , :input_html => {:class => "input-xlarge ", :id =>"search_item_id"}, 
  :label => "Item" %>


	<%= f.input :quantity  , :input_html => {:class => "input-xlarge "}, 
  :label => "Jumlah Item yang digunakan" %>
 
  
  <div class="form-actions">
		<% if new_object.persisted? %>
			<%= f.button :submit , :class => "btn btn-primary", :value=> "Update Compatibility" %>
		<% else %>
			<%= f.button :submit , :class => "btn btn-primary", :value=> "Create Compatibility" %>
		<% end %>
  </div>
<% end %>