<%= render :partial => "layouts/masthead" ,:locals => {
	:title => "Vendor",
	:description => "Tambahkan Vendor ke Database"
}%>

<div id="content">

	<div class="container">
		
		
		<div class="row">
			
			<div class="span8">
				
				<%= link_to new_vendor_url, :class => "new_entry btn btn-primary" do %>
					<i class="icon-plus"></i>Supplier Baru
				<% end %> 
				<hr />
				 
				
				<%#= render :partial => "vendors/new_object_form", :locals => {
					:new_object => @new_object , 
					:url => vendors_url
				}%>

				<table class="table table-bordered table-striped table-highlight" id='tableview'>
					<thead>
						<tr>
							<th>Name</th>
							<th>Contact Person</th>
							<th>Contact</th> 
							<th>Alamat</th>
							<th colspan='2'>Action</th>
						</tr>
					</thead>
					<tbody> 
						<% @objects.each do |object| %>
							<%= render :partial =>  'vendors/entry', :locals => {
								:object => object 
							} %> 
						<% end %>
					</tbody>
				</table>

				
				
				
			 
				
			</div> <!-- /.span8 -->
			
			
			<div class="span4">
				
				Search Vendor <hr />
				All Vendors <hr /> 
				
						
				
			</div> <!-- /.span4 -->
			
		</div> <!-- /.row -->
		
	
	</div> <!-- /.container -->

</div> <!-- /#content -->

