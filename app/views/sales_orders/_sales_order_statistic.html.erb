<h3>Pending Confirmation: <%= @pending_confirmation_sales_orders.length %></h3>

<table class="table table-bordered table-striped table-highlight" id='tableview'>
	<thead>
		<tr>
			<th>
				Invoice No
			</th>
			<th>
				Tanggal
			</th>
			<th>
				Jumlah
			</th>
		</tr>
	</thead>
	<tbody>
		
		<% @pending_confirmation_sales_orders.each do |sales_order| %>
			<tr>
				<td> 
					<%= link_to sales_order.code ,new_sales_order_sales_entry_url(sales_order)%>
				</td>
				<td> 
					<%= print_date(sales_order.created_at )%>
				</td>
				<td>
					<%= print_money( sales_order.total_amount_to_be_paid ) %>
				</td>
			</tr>
		<% end %>
		
	 
	</tbody>
</table>