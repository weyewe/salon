<%= simple_form_for( new_object, :url => url,
      :method => :post , 
      :html => {:class => " prevent_double_submit ajax-form",
        :id => "update_customer"}) do |f| %> 
			<table class="table table-bordered table-striped table-highlight" >
				<thead>
					<tr>
						<th style='text-align:center;'>Update Customer</th>  
					</tr>
				</thead>
				<tbody>
					<tr>
						<td> 
						  	<%= f.input :customer_id, :input_html => { :class => 'search_customer', :id => "search_customer_id" }  ,
											:label => "Customer" , :hint => "Leave empty if not registered", :as => :string  %> 
						</td>
					 
			 
					</tr>
					<tr>
						<td   style='text-align:center;'><%= f.submit  "Confirm Invoice Details", :class =>"btn" %></td>
					</tr>
				</tbody>
			</table> 
<% end %>

