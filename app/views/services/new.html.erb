<%= render :partial => "layouts/masthead" ,:locals => {
	:title => "Service",
	:description => ""
}%>

<div id="content">

	<div class="container">
		
		
		<div class="row">
			
			<div class="span8">
				 
				
				<%= link_to new_service_url, :class => "new_entry btn btn-primary" do %>
					<i class="icon-plus"></i>Service Baru
				<% end %> 
				<hr />
				
				<%#= render :partial => "items/new_object_form", :locals => {
					:new_object => @new_object , 
					:url => items_url, 
				}%>

				
				
				<table class="table table-bordered table-striped table-highlight" id='tableview'>
					<thead>
						<tr>
							<th>Service </th>
							<th>Jumlah Karyawan</th> 
							<th>Harga Jual</th>
							<th>Komisi per Karyawan</th>
							<th style='text-align:center;' colspan='2'>Action</th>
						</tr>
					</thead>
					<tbody>
						<% @objects.each do |object| %>
							<%= render :partial =>  'services/entry', :locals => {
								:object => object 
							} %> 
						<% end %>
					</tbody>
				</table>

				
			</div> <!-- /.span8 -->
			
			
			<div class="span4">
				
						
				Search Item <hr />
				All Items <hr /> 
				 
				
			</div> <!-- /.span4 -->
			
		</div> <!-- /.row -->
		
	
	</div> <!-- /.container -->

</div> <!-- /#content -->

